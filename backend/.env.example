# ============================================
# AgentFund Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Application
DEBUG=true
API_VERSION=v1

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Encryption (for storing user API keys)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# Alpaca (optional - for testing without user connection)
ALPACA_API_KEY=PKO5XOGB5APWNU2755JLZJDTFC
ALPACA_API_SECRET=BGdDu5rWYLdX8Jnbj3WGhV744qpnPmnwedAE1cuWZRiG
ALPACA_PAPER_MODE=true

# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Sentiment Analysis
# Reddit API credentials (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AgentFund Sentiment Analyzer 1.0

# StockTwits (no auth required)
STOCKTWITS_ENABLED=true

# Sentiment weights (should sum to 1.0)
SENTIMENT_NEWS_WEIGHT=0.4
SENTIMENT_SOCIAL_WEIGHT=0.3
SENTIMENT_VELOCITY_WEIGHT=0.3

# Sentiment processing
SENTIMENT_CACHE_TTL_MINUTES=30
SENTIMENT_BATCH_SIZE=10
SENTIMENT_RATE_LIMIT_DELAY=0.5
SENTIMENT_MIN_SAMPLE_SIZE=5

# FinBERT model (for news sentiment)
FINBERT_MODEL_NAME=ProsusAI/finbert
FINBERT_MAX_LENGTH=512

# Email (Resend)
RESEND_API_KEY=re_your-api-key

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
