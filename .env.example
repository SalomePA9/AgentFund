# =============================================================================
# AgentFund Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: Project Settings â†’ API in your Supabase dashboard
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -----------------------------------------------------------------------------
# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your-generated-fernet-key-here

# JWT secret for authentication tokens
JWT_SECRET=your-jwt-secret-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# -----------------------------------------------------------------------------
# Alpaca Trading (Optional - can also be set per-user via API)
# Paper trading: https://app.alpaca.markets/paper/dashboard/overview
# Live trading: https://app.alpaca.markets/
# -----------------------------------------------------------------------------
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-api-secret
ALPACA_PAPER_MODE=true

# -----------------------------------------------------------------------------
# LLM Configuration (for reports and chat)
# Get from: https://console.anthropic.com/
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Email (for notifications and reports)
# Get from: https://resend.com/
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
EMAIL_FROM=AgentFund <noreply@yourdomain.com>

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Server configuration
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Reddit API (for social sentiment - optional)
# Get from: https://www.reddit.com/prefs/apps
# -----------------------------------------------------------------------------
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AgentFund/1.0

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------
# Set to true to disable auth checks (development only!)
# DISABLE_AUTH=false
